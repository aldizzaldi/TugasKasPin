<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBarangActivity">

    <TextView
        android:id="@+id/tv_judul_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Barang"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_kode_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_judul_barang"
        android:hint="Kode Barang"
        android:textSize="20sp"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_nama_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_kode_barang"
        android:hint="Nama Barang"
        android:textSize="20sp"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/et_stok_barang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_nama_barang"
        android:hint="Stok Barang"
        android:textSize="20sp"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btn_tambah_barang"
        android:background="@drawable/btn_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simpan Barang"
        android:layout_below="@id/et_stok_barang"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>



</RelativeLayout>